@page
@model LoginModel
@{
    ViewData["Title"] = "User Login - Shift To Thrift";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Login - Shift to Thrift</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header class="banner first-color">
        <img src="/images/banner.jpg" alt="Shift to Thrift Banner" class="banner-image">

    </header>
    <main class="login-content second-color">
        <div class="login-container third-color">
            <h2>User Login</h2>
            <form method="post" class="login-form">
                <label for="email">Email Address:</label>
                <input type="email" id="email" name="email" placeholder="Enter your email" required>

                <label for="password">Password:</label>
                <input type="password" id="password" name="password" placeholder="Enter your password" required>

                <button type="submit" class="btn fourth-color">Login</button>
                <p class="register-link">Don't have an account? <a href="/Register">Register Here</a></p>
            </form>
        </div>
    </main>
    <footer class="footer fourth-color">
        <div class="footer-left">
            <p>Shift to Thrift</p>
        </div>
        <div class="footer-right">
            <a href="/contact" class="footer-icon"><img src="/images/contact.png" alt="Contact"></a>
            <a href="/help" class="footer-icon"><img src="/images/help.png" alt="Help"></a>
            <a href="mailto:info@shift2thrift.com" class="footer-icon"><img src="/images/email.png" alt="Email"></a>
        </div>
    </footer>
</body>
</html>
