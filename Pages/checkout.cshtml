@page
@model Shift_to_Thrift.Pages.checkoutModel
@{
    ViewData["Title"] = "Checkout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout</title>
    <link rel="stylesheet" href="~/css/checkout.css">
</head>
<body>
    <main class="checkout-container">
        <h1>Checkout</h1>
        <section class="shipping-details">
            <h2>Shipping Details</h2>
            <form>
                <div class="form-group">
                    <label for="full-name">Full Name</label>
                    <input type="text" id="full-name" name="full-name" placeholder="Enter your full name" required>
                </div>
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input type="email" id="email" name="email" placeholder="Enter your email" required>
                </div>
                <div class="form-group">
                    <label for="phone">Phone Number</label>
                    <input type="tel" id="phone" name="phone" placeholder="Enter your phone number" required>
                </div>
                <div class="form-group">
                    <label for="address">Shipping Address</label>
                    <textarea id="address" name="address" rows="3" placeholder="Enter your address" required></textarea>
                </div>
                <div class="form-group">
                    <label for="city">City</label>
                    <input type="text" id="city" name="city" placeholder="Enter your city" required>
                </div>
                <div class="form-group">
                    <label for="zip">Postal Code</label>
                    <input type="text" id="zip" name="zip" placeholder="Enter your postal code" required>
                </div>
            </form>
        </section>
        <section class="payment-methods">
            <h2>Payment Methods</h2>
            <form>
                <div class="payment-option">
                    <input type="radio" id="card" name="payment-method" value="card" required>
                    <label for="card">
                        <img src="/images/card.png" alt="Card Payment">
                        Card Payment
                    </label>
                </div>
                <div class="payment-option">
                    <input type="radio" id="cod" name="payment-method" value="cod">
                    <label for="cod">
                        <img src="/images/cod.png" alt="Cash on Delivery">
                        Cash on Delivery
                    </label>
                </div>
                <div class="payment-option">
                    <input type="radio" id="mintpay" name="payment-method" value="mintpay">
                    <label for="mintpay">
                        <img src="/images/mintpay.png" alt="MintPay">
                        MintPay
                    </label>
                </div>
            </form>
        </section>
        <section class="order-summary">
            <h2>Order Summary</h2>
            <ul>
                <li>Item 1 - $20</li>
                <li>Item 2 - $15</li>
                <li>Item 3 - $30</li>
            </ul>
            <p class="total">Total: <strong>$65</strong></p>
            <button class="btn confirm-order-btn">Confirm Order</button>
        </section>
    </main>
    <footer class="footer">
        <p>&copy; 2024 Shift to Thrift</p>
    </footer>
</body>
</html>
