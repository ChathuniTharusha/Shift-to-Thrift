@page
@model ShiftToThrift.Pages.WishlistModel
@{
    ViewData["Title"] = "Wishlist - Shift To Thrift";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wishlist - Shift to Thrift</title>
    <link rel="stylesheet" href="~/css/wishlist.css">
</head>
<body>
    <header>
        <img src="/images/banner.jpg" alt="Shift to Thrift Banner" class="banner-image">

    </header>

    <main class="wishlist-content second-color">
        <div class="wishlist-container">
            <h2>Your Wishlist</h2>
            <form method="post" class="wishlist-form">
                <ul class="wishlist-items">
                    @foreach (var item in Model.WishlistItems)
                    {
                        <li class="wishlist-item">
                            <input type="checkbox" id="wishlist-item-@item.Id" name="wishlist-item-@item.Id">
                            <label for="wishlist-item-@item.Id" class="item-details">
                                <img src="@item.ImageUrl" alt="@item.Name" class="wishlist-item-img">
                                <div class="item-info">
                                    <span class="item-name">@item.Name</span>
                                    <span class="item-price">@item.Price</span>
                                </div>
                            </label>
                            <div class="item-actions">
                                <input type="number" value="1" min="1" class="quantity-input">
                                <button type="button" class="remove-btn" onclick="removeWishlistItem(@item.Id)">Remove</button>
                                <button type="button" class="proceed-btn btn fourth-color" onclick="addToCart(@item.Id)">Add to Cart</button>
                            </div>
                        </li>
                    }
                </ul>
                <button type="submit" class="btn fourth-color">Save Wishlist</button>
            </form>
        </div>
    </main>

    <footer class="footer fourth-color">
        <div class="footer-left">
            <p>Shift to Thrift</p>
        </div>
        <div class="footer-right">
            <a href="/contact" class="footer-icon"><img src="/images/contact.png" alt="Contact"></a>
            <a href="/help" class="footer-icon"><img src="/images/help.png" alt="Help"></a>
            <a href="mailto:info@shift2thrift.com" class="footer-icon"><img src="/images/email.png" alt="Email"></a>
        </div>
    </footer>
</body>
</html>
