@page
@model MenModel
@{
    ViewData["Title"] = "Men's Wear";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Men's Wear</title>
    <link rel="stylesheet" href="~/css/Men.css">
</head>
<body>
    <header>
        <img src="/images/banner.jpg" alt="Shift to Thrift Banner" class="banner-image">
    </header>
    <main class="content second-color">
        <section class="page-heading">
            <h1>Men's Wear</h1>
            <p>Explore the latest trends in men's fashion with unbeatable prices.</p>
        </section>
        <aside class="filter-container">
            <h2>Filter Options</h2>
            <form>
                <label for="category">Category:</label>
                <select id="category" name="category">
                    <option value="all">All</option>
                    <option value="tshirts">T-Shirts</option>
                    <option value="shirts">Shirts</option>
                    <option value="pants">Pants</option>
                    <option value="jackets">Jackets</option>
                </select>
                <label for="price">Price Range:</label>
                <input type="range" id="price" name="price" min="0" max="500">
                <span id="priceValue">$0 - $500</span>
                <button type="submit" class="btn fourth-color">Apply Filters</button>
            </form>
        </aside>
        <section class="product-grid">
            <article class="product-card">
                <img src="/images/item3.jpg" alt="Product 1">
                <h3>Classic Gray T-Shirt</h3>
                <p>$15</p>
                <button class="btn shop-now-btn">Add to Cart</button>
            </article>
            <article class="product-card">
                <img src="/images/men2.jpg" alt="Product 2">
                <h3>Formal Blue Shirt</h3>
                <p>$25</p>
                <button class="btn shop-now-btn">Add to Cart</button>
            </article>
            <article class="product-card">
                <img src="/images/men3.jpg" alt="Product 3">
                <h3>Casual Denim Jacket</h3>
                <p>$40</p>
                <button class="btn shop-now-btn">Add to Cart</button>
            </article>
            <article class="product-card">
                <img src="/images/men4.jpg" alt="Product 4">
                <h3>Black Slim Fit Pants</h3>
                <p>$30</p>
                <button class="btn shop-now-btn">Add to Cart</button>
            </article>
        </section>
    </main>
    <footer class="footer fourth-color">
        <div class="footer-left">
            <p>Shift to Thrift</p>
        </div>
        <div class="footer-right">
            <a href="/contact" class="footer-icon"><img src="/images/contact.png" alt="Contact"></a>
            <a href="/help" class="footer-icon"><img src="/images/help.png" alt="Help"></a>
            <a href="mailto:info@shift2thrift.com" class="footer-icon"><img src="/images/email.png" alt="Email"></a>
        </div>
    </footer>
    <script src="script.js"></script>
</body>
</html>
