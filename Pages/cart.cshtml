@page
@model ShiftToThrift.Pages.CartModel
@{
    ViewData["Title"] = "Shopping Cart - Shift To Thrift";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart - Shift to Thrift</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <img src="/images/banner.jpg" alt="Shift to Thrift Banner" class="banner-image">

    </header>
    <main class="cart-content second-color">
        <div class="cart-container">
            <h2>Your Shopping Cart</h2>
            <form method="post" class="cart-form">
                <ul class="cart-items">
                    <li class="cart-item">
                        <input type="checkbox" id="item1" name="item1">
                        <label for="item1">
                            <img src="/images/item1.jpg" alt="Item 1">
                            <span>Dress - $20</span>
                        </label>
                    </li>
                    <li class="cart-item">
                        <input type="checkbox" id="item2" name="item2">
                        <label for="item2">
                            <img src="/images/item2.jpg" alt="Item 2">
                            <span>Top - $25</span>
                        </label>
                    </li>
                    <li class="cart-item">
                        <input type="checkbox" id="item3" name="item3">
                        <label for="item3">
                            <img src="/images/item3.jpg" alt="Item 3">
                            <span>Pants - $15</span>
                        </label>
                    </li>
                </ul>
                <button type="submit" class="btn fourth-color">Checkout</button>
            </form>
        </div>
    </main>
    <footer class="footer fourth-color">
        <div class="footer-left">
            <p>Shift to Thrift</p>
        </div>
        <div class="footer-right">
            <a href="/contact" class="footer-icon"><img src="/images/contact.png" alt="Contact"></a>
            <a href="/help" class="footer-icon"><img src="/images/help.png" alt="Help"></a>
            <a href="mailto:info@shift2thrift.com" class="footer-icon"><img src="/images/email.png" alt="Email"></a>
        </div>
    </footer>
</body>
</html>
